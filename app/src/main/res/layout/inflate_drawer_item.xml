<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shade="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutDrawerItem"
    style="?android:attr/borderlessButtonStyle"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="start">

    <FrameLayout
        android:id="@+id/item_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/imageViewDrawerIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_acct" />

        <com.shades.shade.widgets.ShadeTextView
            android:id="@+id/textViewDrawerItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="72dp"
            android:singleLine="true"
            android:text="Drawer title"
            android:textColor="@color/md_black_1000_50"
            android:textSize="14sp"
            shade:customFont="@string/roboto_bold" />
    </FrameLayout>

</RelativeLayout>